<!-- component -->
<%= form_with model: @volunteer do |f| %>
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2">
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= f.label 'Email', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :email, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Email' %>
      <!--      <p class="text-red text-xs italic">Please fill out this field.</p>-->
    </div>
    <div class="md:w-1/2 px-3">
      <%= f.label 'Name', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :name, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Name' %>
    </div>

  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'father_name', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :father_name, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Father Name' %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= f.label 'Contact Whatsapp', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :phone_whatsapp, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Contact (Whatsapp)' %>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'CNIC', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :cnic, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'CNIC' %>
    </div>

    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= f.label 'City', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :city, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'City' %>
    </div>

  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'Current Address', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :current_address, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Current Address' %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= f.label 'Home Town Address', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :hometown_address, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Home Town Address' %>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'Educational Institute', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :educational_institute, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Educational Institute' %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= f.label 'Degree Department', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :degree_department, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Degree Department' %>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'Age', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.number_field :age, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Age' %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= f.label 'Date of Birth', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= f.text_field :dob, class: 'appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3', placeholder: 'Date of Birth' %>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'Gender', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= render partial: 'collection_radio_buttons', locals: {collection: ['Male', 'Female'], name: 'gender', f: f} %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= f.label 'Professional Details', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= render partial: 'collection_check_boxes', locals: {collection: Volunteer::PROFESSIONAL_DETAILS, f: f, name: 'professional_details[]'} %>
    </div>

  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'Blood Group', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= render partial: 'collection_radio_buttons', locals: { collection: ['O+','O-','A+','A-','B+','B-','AB+','AB-','Not Specified'], name: 'blood_group', f: f } %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= f.label 'Availability', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= render partial: 'collection_check_boxes', locals: {collection: ['Full Time', 'Part Time'], f: f, name: 'availability[]'} %>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'Skills', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= render partial: 'collection_check_boxes', locals: {collection: Volunteer::SKILLS, f: f, name: 'skills[]'} %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= f.label 'Area of Interest', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= render partial: 'collection_check_boxes', locals: {collection: Volunteer::AREA_OF_INTEREST, f: f, name: 'area_of_interest[]'} %>
    </div>
  </div>

  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= f.label 'Please mention days', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= render partial: 'collection_check_boxes', locals: {collection: Date::DAYNAMES, f: f, name: 'days[]'} %>
    </div>

    <div class="md:w-1/2 px-3">
      <%= f.label 'How did you come to know about us?', class: 'block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2' %>
      <%= render partial: 'collection_check_boxes', locals: {collection: Volunteer::MARKETING_MEDIUM, f: f, name: 'marketing_medium[]'} %>
    </div>
  </div>



</div>
<% end %>